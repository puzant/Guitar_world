<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.2.5/jquery.fancybox.min.css" />
    <link rel="stylesheet" href="../../styles/tabs_library_style.css">
    <title>Document</title>
</head>
<body>
        <% include ../../partials/user_page_navbar %>

  <div class="container">

    <% include ../../partials/tabs_pages %>
    <h3>Fingerstyle Arrangments</h3>
    <hr>
    <div class="row text-center text-lg-left">
        <% for(let i=0; i<tabs.length; i++) { %>
            <div class="col-lg-3 col-md-4 col-xs-6 thumbnail">
                <a href="<%= tabs[i].image %>" class="d-block mb-4 h-100" data-fancybox="gallery">
          <img src="<%= tabs[i].image %>" alt="" class="img-thumbnail">
          <div class="overlay">
            <div class="text">
              <div class="">Name: <%= tabs[i].name %></div>
              <div class="">Composer: <%= tabs[i].composer %></div>
              <div class="">Genre: <%= tabs[i].genre %></div>
              </div>              
            </div>
          </a>
          </div>
          <% } %>
      </div>
      <!-- <div class="mt-3 text-center">
          <button class="btn btn-outline-primary">Load More</button>
      </div> -->
    </div>
          


<script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.2.5/jquery.fancybox.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>

<script>
  $(document).ready(function() {
    var tabName;  
    var composer;  
    var genre;  
    var imgUrl;
    $("#btnsendemail").click(function() {
      email      = $('#email').val(); 
      tabName    = $("#txtname").val();  
      composer   = $("#txtemail").val();  
      genre      = $("#txtmobile").val();  
      imgUrl     = $("#txtmessage").val(); 
      $("#message").text("Sending Email please wait ..."); 
      $.post('/emailRoutes', {
        email   : email,
        tabName : tabName,
        composer : composer,
        genre : genre,
        imgUrl : imgUrl
      }, function(data) {
        if(data == 'sent') {
          $('#message').html("email has been send successfully")
        }
      }) 
  })
})


</script>

</body>
</html>